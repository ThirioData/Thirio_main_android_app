<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thirio.android.fragments.foodCuration.Breakfast"
   >

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:columnCount="2"
            android:rowCount="2">
            <LinearLayout
                android:id="@+id/first"
                android:padding="4dp"
                android:layout_marginRight="8dp"
                android:layout_columnWeight="1"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center"
                    android:backgroundTint="#000"
                    android:src="@drawable/sample1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center"

                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Hello 123"/>
            </LinearLayout>
            <LinearLayout
                android:padding="4dp"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:layout_marginLeft="8dp">
                <ImageView
                    android:layout_gravity="center"

                    android:backgroundTint="#000"
                    android:src="@drawable/sample1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center"

                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Hello 1234"/>
            </LinearLayout>
            <LinearLayout
                android:padding="4dp"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:layout_marginLeft="8dp">
                <ImageView
                    android:layout_gravity="center"

                    android:backgroundTint="#000"
                    android:src="@drawable/sample1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center"

                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Hello 12345"/>
            </LinearLayout>
        </GridLayout>
        <LinearLayout
            android:id="@+id/footer"
            android:background="#000"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:orientation="horizontal">
        <TextView
            android:gravity="center"
            android:textColor="#fff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1000 Calorie "
            android:layout_weight="1"/>
            <TextView
                android:gravity="center"
                android:textColor="#fff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="10g Protein "
                android:layout_weight="1"/>
            <TextView
                android:gravity="center"
                android:textColor="#fff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="100g fat "
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
