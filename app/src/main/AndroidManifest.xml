            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".InfoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" />
        <activity
            android:name=".Activities.Splash"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/LaunchTheme" />
        <activity
            android:name=".Activities.Loading"
            android:theme="@style/LaunchTheme" />
        <activity
            android:name=".Activities.MainActivity1"
            android:theme="@style/LaunchTheme" />
        <activity
            android:name=".Activities.Thirio"
            android:theme="@style/LaunchTheme" />
        <activity
            android:name=".Activities.FoodCuration"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".Activities.LandingActivity"
            android:theme="@style/NoActionBar">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->


            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity
            android:name=".InfoActivityFood"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" />
        <activity
            android:name=".InfoActivityFitness"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" />
        <activity
            android:name=".InfoActivityFond"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"></activity>
    </application>

</manifest>